  <div class="data-container">
    <span class="data-content">
      <p class="data-name">Code postal</p>
      <p>{{ apartment.code }}</p>
    </span>
    <span class="data-content">
      <p class="data-name">ville</p>
      <p>{{ apartment.city }}</p>
    </span>
    <span class="data-content">
      <p class="data-name">addresse</p>
      <p>{{ apartment.address }}</p>
    </span>
    <span class="data-content">
      <p class="data-name">garantie</p>
      <p>{{ apartment.guarantee }}€</p>
    </span>
    <span class="data-content">
      <p class="data-name">charge</p>
      <p>{{ apartment.charge }}€</p>
    </span>
    <span class="data-content">
      <p class="data-name">loyer</p>
      <p>{{ apartment.rent }}€</p>
    </span>
    <span class="data-content">
      <p class="data-name">somme</p>
      <p>{{ (apartment.charge + apartment.rent)| number_format(2,'.','') }}</p>
    </span>
  </div>
</section>