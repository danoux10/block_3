</div>

<div class="row">
  <div class="column">
    <span class="info-element">
      <p class="name-apartment">garantie</p>
      <p class="euro">{{ apartment.guarantee }}</p>
    </span>
    <span class="info-element">
      <p class="name-apartment">loyer</p>
      <p class="euro">{{ apartment.rent }}</p>
    </span>
  </div>
  <div class="column">
     <span class="info-element">
      <p class="name-apartment">Eaux</p>
      <p class="euro">{{ apartment.water }}</p>
    </span>
    <span class="info-element">
      <p class="name-apartment">electrisitÃ©</p>
      <p class="euro">{{ apartment.electricity }}</p>
    </span>
    <span class="info-element">
      <p class="name-apartment">Gaz</p>
      <p class="euro">{{ apartment.gas }}</p>
    </span>
    <span class="info-element">
      <p class="name-apartment">Total charge</p>
      <p class="euro">{{ apartment.charge }}</p>
    </span>
  </div>
  <span class="info-element">
    <p class="name-apartment">somme</p>
    <p class="euro">{{ (apartment.charge+apartment.rent+0.08) |number_format(2,'.','') }}</p>
  </span>
</div>
