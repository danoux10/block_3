{% for apartment in apartments %}
  <div class="card">
    <div class="card-info">
      <div class="card-element">
        <span class="info-element">
          <p class="name-data">code postal</p>
          <p>{{ apartment.code }}</p>
        </span>
        <span class="info-element">
          <p class="name-data">
            <span class="icon-content">
              <svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 576 512'>
                <path d='M384 476.1L192 421.2V35.9L384 90.8V476.1zm32-1.2V88.4L543.1 37.5c15.8-6.3 32.9 5.3 32.9 22.3V394.6c0 9.8-6 18.6-15.1 22.3L416 474.8zM15.1 95.1L160 37.2V423.6L32.9 474.5C17.1 480.8 0 469.2 0 452.2V117.4c0-9.8 6-18.6 15.1-22.3z'/>
              </svg>
            </span>
          </p>
          <p>{{ apartment.city }}</p>
          </span>
        <span class="info-element">
            <p class="name-data">
              <span class="icon-content">
                <svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 384 512'>
                  <path d='M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z'/>
                </svg>
              </span>
            </p>
            <p>{{ apartment.address }}</p>
          </span>
      </div>
      <div class="card-element">
        <span class="info-element">
          <p class="name-data">garantie</p>
          <p class="euro">{{ apartment.guarantee }}</p></span>
        <span class="info-element">
          <p class="name-data">charge</p>
          <p class="euro">{{ apartment.charge }}</p>
        </span>
        <span class="info-element">
          <p class="name-data">loyer</p>
          <p class="euro">{{ apartment.rent }}</p>
        </span>
        <span class="info-element">
          <p class="name-data">somme</p>
          <p class="euro">{{ (apartment.charge+apartment.rent+0.08) |number_format(2,'.','') }}</p>
        </span>
      </div>
    </div>
  </div>
{% endfor %}
